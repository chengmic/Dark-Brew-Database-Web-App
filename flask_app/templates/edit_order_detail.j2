<html>
<head>
    <link href="/static/style.css" rel="stylesheet" type="text/css" />
    <title>Dark Brew Cafe</title>
</head>


<body>

    <h2 class="center">Edit Order Detail</h1>

    <!-- DISPLAYS THE ROW THAT IS CURRENTLY BEING EDITED -->
    <div class="center">
        <table border="1" cellpadding="5">
            {% if Order_Details %}
                <thead>
                    <tr>
                        <th>Detail ID</th>
                        <th>Order ID</th>
                        <th>Item</th>
                        <th>Quantity</th>
                        <th>Unit Cost</th>
                        <th>Item Total</th>
                    </tr>
                </thead>

                <tbody>
                    {% for order_detail in Order_Details %}
                    <tr>
                        {% for key in order_detail.keys() %}
                            <td>{{order_detail[key]}}</td>
                        {% endfor %}
                    </tr>
                </tbody>
                    {% endfor %}
            {% endif %}
        </table>
    </div>

    <!-- EDIT ORDERS FORM-->
    <div id="edit" class="center">
        <form id="editOrder_Detail" action="/edit_order_detail/{{Order_Details[0].order_detail_id}}" method="POST">
            <legend><strong>Edit Order Detail</strong></legend>
            <fieldset>
                <input type="hidden" value="{{Order_Details[0].order_detail_id}}" id="order_detail_id" name="order_detail_id" required>


                <label for="item_quantity"> Quantity </label>
                    <input type="number" step="1" min="1" value="{{Order_Details[0].item_quantity}}" id="item_quantity" name="item_quantity" required>

                <label for="unit_cost"> Unit Cost </label>
                    <input type="number" step="0.01" min="0" value="{{Order_Details[0].unit_cost}}" id="unit_cost" name="unit_cost" required>
            </fieldset>

            <input type="submit" value="Edit Order Detail" name="edit_order_detail" class="btn btn-primary">
            <a href='/order_details'><input class="btn" type="button" value="Cancel"></a>
        </form>
    </div>

</html>